<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#000000">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/ediText"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:textColorHint="#000000"
                    android:hint="请输入城市名称"
                    android:paddingStart="20dp"
                    android:textSize="13sp"
                    android:background="@drawable/editext_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.141"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.68">

                </EditText>

                <Button
                    android:id="@+id/select"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_background"
                    android:text="查询"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:theme="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.903"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.68" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar"
            tools:ignore="UselessParent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000">


                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        app:layout_constraintBottom_toTopOf="@+id/text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.826">

                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:text="@string/temp"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/white"
                            android:textSize="45sp" />

                        <TextView
                            android:id="@+id/c1"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:text="@string/c"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            tools:ignore="RtlCompat" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:text="@string/cityName"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/obsTime"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.035" />

                    <TextView
                        android:id="@+id/obsTime"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/obsTime"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.942"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.035" />

                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="30dp"
                        android:background="@drawable/feellike_boder"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="@string/bodyFeeling"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/feelLike"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/feelLike"
                            android:textColor="@color/white"
                            android:textSize="13sp">

                        </TextView>

                        <TextView
                            android:id="@+id/c2"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="@string/c"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/text"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.658" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/comfort"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:lines="3"
                android:text="@string/comfort"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal">

            </TextView>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sevenDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/today">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
</layout>
